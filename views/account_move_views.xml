<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_whatsapp" model="ir.ui.view">
        <field name="name">account.move.form.whatsapp.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="has_whatsapp_contact" invisible="1"/>
            </xpath>
            <!-- Smart button: top-right button box mein WhatsApp icon -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                    name="action_open_whatsapp_invoice_wizard"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-whatsapp"
                    invisible="move_type != 'out_invoice'"
                    title="Send invoice PDF via WhatsApp Web">
                    <div class="o_stat_info">
                        <span class="o_stat_text">WhatsApp</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
